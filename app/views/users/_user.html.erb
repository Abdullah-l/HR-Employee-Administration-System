<tr class="hover:bg-gray-100" id="<%= dom_id user %>">
  <td class="py-4 px-6 text-sm font-medium text-green-900 whitespace-nowrap">
    <%= user.id %>
  </td>

  <td class="py-4 px-6 text-sm font-medium text-green-900 whitespace-nowrap">
    <%= image_tag(user.avatar, :class => "h-10") if user.avatar.representable? %>
  </td>

  <td class="py-4 px-6 text-sm font-medium text-green-900 whitespace-nowrap">
    <%= user.email %>
  </td>

  <td class="py-4 px-6 text-sm font-medium text-gray-900 whitespace-nowrap">
    <%= user.name %>
  </td>

  <td class="py-4 px-20 text-sm font-medium text-gray-900 whitespace-nowrap">
    <%= user.sign_in_count %>
  </td>

  <td class="py-4 px-6 text-sm font-medium text-gray-900 whitespace-nowrap">
    <%= user.current_sign_in_at %>
  </td>

  <td class="py-4 px-6 text-sm font-medium text-gray-900 whitespace-nowrap">
    <%= user.last_sign_in_at %>
  </td>

  <td class="py-4 px-6 text-sm font-medium text-center whitespace-nowrap">
  <%= button_to "Edit", edit_user_registration_path(user), :method => "get", :class => "bg-green-600 rounded-sm text-white text-sm my-1" %>
  <%= button_to "Delete", user, method: :delete, :class => "bg-red-800 rounded-sm text-white text-sm my-1" %>
  </td>
</tr>
