<p style="color: green"><%= notice %></p>

<style>
table, th, td {
  border: 1px solid black;
  border-collapse: collapse;
}
th, td {
  padding: 15px;
}
</style>

<h1>Targets</h1>

<div id="targets">
<table style="width: 90%">
<tr>
  <% @target_attributes.each do |attr| %>
  <th> <%= attr %> </th>
  <% end %>
  <th>
    <%= "Options" %>
  </th>
  <% @targets.each do |target| %>
    <%= render target %>

  <% end %>
</tr>
</table>
</div>

<br>
<%= link_to "New target", new_target_path %>
